{% extends 'base.html.twig' %}

{% block title %}{{ objet.titre }} - Repair Café{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row mb-4">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="{{ path('app_dashboard') }}">Accueil</a></li>
                    <li class="breadcrumb-item"><a href="{{ path('app_objet_index') }}">Objets</a></li>
                    <li class="breadcrumb-item active">{{ objet.titre }}</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        {# Informations de l'objet #}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header" style="background-color: {{ objet.categorie.couleur }}">
                    <h4 class="mb-0 text-white">
                        <i class="bi {{ objet.categorie.icone }}"></i> {{ objet.titre }}
                    </h4>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th><i class="bi bi-tag"></i> Catégorie</th>
                                <td>
                                    <span class="badge" style="background-color: {{ objet.categorie.couleur }}">
                                        {{ objet.categorie.nom }}
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-person"></i> Propriétaire</th>
                                <td>{{ objet.nomProprietaire }}</td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-envelope"></i> Email</th>
                                <td><a href="mailto:{{ objet.emailProprietaire }}">{{ objet.emailProprietaire }}</a></td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-calendar"></i> Date de dépôt</th>
                                <td>{{ objet.dateDepot }}</td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-currency-euro"></i> Estimation</th>
                                <td>
                                    {% if objet.estimationCoutReparation %}
                                        {{ objet.estimationCoutReparation }} €
                                    {% else %}
                                        <span class="text-muted">Non estimé</span>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th><i class="bi bi-check-circle"></i> Fonctionnel</th>
                                <td>
                                    {% if objet.estFonctionnel %}
                                        <span class="badge bg-success">Oui</span>
                                    {% else %}
                                        <span class="badge bg-danger">Non</span>
                                    {% endif %}
                                </td>
                            </tr>
                            {% if objet.photo %}
                                <tr>
                                    <th><i class="bi bi-camera"></i> Photo</th>
                                    <td>{{ objet.photo }}</td>
                                </tr>
                            {% endif %}
                        </tbody>
                    </table>

                    <div class="alert alert-info">
                        <strong><i class="bi bi-exclamation-circle"></i> Description de la panne :</strong>
                        <p class="mb-0 mt-2">{{ objet.descriptionPanne }}</p>
                    </div>
                </div>
            </div>
        </div>

        {# Historique des réparations #}
        <div class="col-md-6 mb-4">
            <div class="card">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Historique des réparations</h5>
                </div>
                <div class="card-body">
                    {% if objet.reparations is empty %}
                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i> Aucune réparation pour cet objet.
                        </div>
                    {% else %}
                        {% for reparation in objet.reparations %}
                            <div class="card mb-3">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="mb-0">
                                            <i class="bi bi-person-badge"></i>
                                            <a href="{{ path('app_reparateur_show', {id: reparation.reparateur.id}) }}">
                                                {{ reparation.reparateur.nom }}
                                            </a>
                                        </h6>
                                        <span class="badge bg-{{ reparation.statut.value == 'Réparée' ? 'success' : (reparation.statut.value == 'Irréparable' ? 'danger' : 'warning') }}">
                                            {{ reparation.statut.value }}
                                        </span>
                                    </div>
                                    
                                    <p class="mb-1 small text-muted">
                                        <i class="bi bi-calendar-event"></i> Début : {{ reparation.dateDebut|date('d/m/Y H:i') }}
                                    </p>
                                    
                                    {% if reparation.dateFin %}
                                        <p class="mb-1 small text-muted">
                                            <i class="bi bi-calendar-check"></i> Fin : {{ reparation.dateFin|date('d/m/Y H:i') }}
                                        </p>
                                    {% endif %}
                                    
                                    {% if reparation.tempsPasseMinutes %}
                                        <p class="mb-1 small">
                                            <i class="bi bi-clock"></i> Temps passé : {{ reparation.tempsPasseMinutes }} minutes
                                        </p>
                                    {% endif %}
                                    
                                    {% if reparation.piecesUtilisees %}
                                        <p class="mb-1 small">
                                            <i class="bi bi-gear"></i> Pièces : {{ reparation.piecesUtilisees }}
                                        </p>
                                    {% endif %}
                                    
                                    {% if reparation.commentaire %}
                                        <p class="mb-0 mt-2">
                                            <strong>Commentaire :</strong><br>
                                            <small>{{ reparation.commentaire }}</small>
                                        </p>
                                    {% endif %}
                                </div>
                            </div>
                        {% endfor %}
                    {% endif %}
                    
                    <div class="d-grid">
                        <button class="btn btn-primary" disabled>
                            <i class="bi bi-plus-circle"></i> Nouvelle réparation (à venir)
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <a href="{{ path('app_objet_index') }}" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Retour à la liste
            </a>
        </div>
    </div>
</div>
{% endblock %}

